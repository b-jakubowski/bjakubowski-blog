{
	"include": [
		"./src/**/*"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"dom",
			"es2015",
			"es2017"
		],
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true
	}
}